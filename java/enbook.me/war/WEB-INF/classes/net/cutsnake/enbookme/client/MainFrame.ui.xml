<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .fill {
	  position: absolute !important;
   	  height: 100%;
      width: 100%;
    }
    .main {
      height: 100%;
      width: 100%;
      margin: 0 auto;
    }
    .content {
      height: 100%;
      width: 100%;
    }
    .linkBar {
      width: 1024px;
      margin: 0 auto;
      background: white;
      border-bottom: 1px solid #CCC;
    }
    .username:visited, 
    .username:hover, 
    .username {
	   float: right;
	   color: #5588bb;
	   font-weight: bold;
	   line-height: 5.5em;
	   margin-right: 112px;
    }
    .logo {
	  font-size: 3em;
	  float: left;
	  font-family: "PT Sans Narrow", arial, sans;
      font-weight: bold;
    }
  </ui:style>
  <g:HTMLPanel addStyleNames="{style.fill}">
    <g:DockLayoutPanel unit="PX" addStyleNames="{style.main}">
      <g:north size="50">
        <g:FlowPanel addStyleNames="{style.linkBar}">
          <g:Label addStyleNames="{style.logo}">Enbook.Me</g:Label>
          <g:Anchor ui:field="username" addStyleNames="{style.username}"></g:Anchor>
        </g:FlowPanel>
      </g:north>
      <g:center>
        <g:SimplePanel ui:field="content" addStyleNames="{style.content}"></g:SimplePanel>
      </g:center>
    </g:DockLayoutPanel>
  </g:HTMLPanel>
</ui:UiBinder> 